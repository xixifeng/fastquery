// 配置必须遵循标准的json语法.
{

  "scope":[
    {
        "config": "hikari",           // 连接池的提供者.如: hikari, c3p0, druid
        "dataSourceName": "xkdb2",    // 数据源的名称
        "basePackages": [             // 该数据源的作用范围
            "org.fastquery.example",              // 包地址
            "org.fastquery.dao.UserInfoDBService",// 完整类名称
            "org.fastquery.dao.QueryByNamedDBExample",
            "org.fastquery.dao.QueryByNamedDBExtend",
            "org.fastquery.dao.SQLInExample",
            "org.fastquery.dao.ProcedureExample",
            "org.fastquery.dao.ProductDBService",
            "org.fastquery.dao.ConditionDBService",
            "org.fastquery.dao.SetDBService"
            // 在这可以配置多个DB接口或包地址,以","号隔开
        ]
    }
    ,
    {
        "config": "mySQLDriver",  
        "dataSourceName": "world-mysql",
        
         // or
         //"config": "sqlServerDriver",
         //"dataSourceName": "world",
         
         // or
         //"config": "postgreSQLDriver",
         //"dataSourceName": "world-pgsql",
        
        "basePackages": ["org.fastquery.sqlserver.dao"]
    }
    ,
    {
